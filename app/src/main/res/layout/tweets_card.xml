<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/tuit"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPerfilPerfAct"
                android:layout_width="59dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[2]" />

            <TextView
                android:id="@+id/tvNomCardPerfAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivPerfilPerfAct"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvIdPerfCardPerfAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvNomCardPerfAct"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivRespondCardPerfAct"
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct"
                app:layout_constraintVertical_bias="1.0"
                tools:srcCompat="@android:drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/ivRetuitCardPerfAct"
                android:layout_width="52dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="72dp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/ivFavCardPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct"
                tools:srcCompat="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/ivFavCardPerfAct"
                android:layout_width="41dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="48dp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/ivShareCardPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct"
                tools:srcCompat="@android:drawable/star_big_on" />

            <ImageView
                android:id="@+id/ivShareCardPerfAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <TextView
                android:id="@+id/tvResContCard"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivRespondCardPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct" />

            <TextView
                android:id="@+id/tvRetwContCard"
                android:layout_width="53dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivRetuitCardPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct" />

            <TextView
                android:id="@+id/tvFavContCard"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivFavCardPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCardPerfAct" />

            <TextView
                android:id="@+id/tvTuitContCardPerfAct"
                android:layout_width="315dp"
                android:layout_height="59dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivPerfilPerfAct"
                app:layout_constraintTop_toBottomOf="@+id/tvIdPerfCardPerfAct" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>