<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/tuit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPerfil"
                android:layout_width="59dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[2]" />

            <TextView
                android:id="@+id/tvNomCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivPerfil"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvIdPerfCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvNomCard"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivRespondCard"
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard"
                tools:srcCompat="@android:drawable/ic_menu_send" />

            <ImageView
                android:id="@+id/ivRetuitCard"
                android:layout_width="52dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toStartOf="@+id/ivFavCard"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard"
                tools:srcCompat="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/ivFavCard"
                android:layout_width="41dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="44dp"
                app:layout_constraintEnd_toStartOf="@+id/ivShareCard"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard"
                tools:srcCompat="@android:drawable/star_big_on" />

            <ImageView
                android:id="@+id/ivShareCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <TextView
                android:id="@+id/tvResContCard"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivRespondCard"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard" />

            <TextView
                android:id="@+id/tvRetwContCard"
                android:layout_width="53dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivRetuitCard"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard" />

            <TextView
                android:id="@+id/tvFavContCard"
                android:layout_width="34dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivFavCard"
                app:layout_constraintTop_toBottomOf="@+id/tvTuitContCard" />

            <TextView
                android:id="@+id/tvTuitContCard"
                android:layout_width="315dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivPerfil"
                app:layout_constraintTop_toBottomOf="@+id/tvIdPerfCard" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>